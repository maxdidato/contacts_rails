= form_for(@contact, :remote => true, :html => { :multipart => true }) do |f|
  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :mobile
    = f.text_field :mobile
  .field
    = f.label :landline
    = f.text_field :landline
  .field
    = f.label :twitter
    = f.text_field :twitter
  .field
    = f.label :photo
    = f.file_field :photo
  .actions
    = f.submit 'Save'
