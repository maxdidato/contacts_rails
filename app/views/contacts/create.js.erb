<% if @contact.errors.any? %>
  $("#errors").html($("<div />").html('<%= escape_javascript(@contact.error_messages)%>').text());
<% else %>
$('<%= escape_javascript(render(:partial => @contact))%>').appendTo('#contacts').hide().fadeIn();
$("#new_contact")[0].reset();
$("#errors").html($("<div />").text())
<% end %>
